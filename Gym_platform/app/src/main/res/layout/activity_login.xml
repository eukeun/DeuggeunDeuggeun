<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    android:background="@drawable/background">

    <ImageView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:paddingLeft="22dp"
        android:padding="30dp"
        app:srcCompat="@drawable/login_img" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="10">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/EditText_Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:fontFamily="@font/jung120"
            android:textColor="#1F1F1F"
            android:layout_marginRight="22dp"
            android:hint="이메일" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="10">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/EditText_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:fontFamily="@font/jung120"
            android:textColor="#1F1F1F"
            android:hint="Password"
            android:inputType="textPassword"/>
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">
        <Button

            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:id="@+id/Button_Login"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="30dp"
            android:textSize="20dp"
            android:fontFamily="@font/jung160"
            android:text="로그인"
            android:background="@drawable/button"
            android:textColor="@drawable/clickabletext"
            />
        <TextView
            android:layout_marginTop="13dp"
            android:layout_marginBottom="13dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#000000"
            android:text="또는"
            android:layout_marginLeft="190dp"/>
        <Button
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:id="@+id/Button_Join"
            android:layout_width="match_parent"
            android:layout_height="70dp"

            android:textSize="20dp"
            android:fontFamily="@font/jung160"
            android:text="회원가입"
            android:background="@drawable/button"
            android:textColor="@drawable/clickabletext"
            />

    </LinearLayout>

    <com.google.android.gms.common.SignInButton
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:background="@drawable/googlejoin"
        android:id="@+id/SigninButton_glogin"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal">

    </com.google.android.gms.common.SignInButton>

</LinearLayout>
